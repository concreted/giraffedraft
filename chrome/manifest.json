{
    "name": "BrowserActionExtension",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action": {
      "default_title": "That's the tool tip",
      "default_popup": "popup.html"
    },
    "permissions": [
      "https://*.fantasysports.yahoo.com/*",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],

        "js": ["jquery.js", "content.js"]
      }
    ],
    "web_accessible_resources": ["styles.css"]
}
