{
    "name": "BrowserActionExtension",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action": {
      "default_title": "That's the tool tip",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "content_scripts": [
      {
        //"matches": ["http://*.yahoo.com/*", "https://*.yahoo.com/*"],
        "matches": ["<all_urls>"],
        "js": ["angular.js", "slider.js", "content/content.js"]
      }
    ],
    "web_accessible_resources": ["app.html", "popup.html",
      "bower_components/angular-c3/dist/c3-chart.js",
      "angular.js",
      "services/services.js",
      "slider.js",
      "bower_components/angular-c3/dist/c3-chart.css",
      "styles.css" 
    ]
}
