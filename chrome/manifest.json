{
    "name": "BrowserActionExtension",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action": {
      "default_title": "That's the tool tip",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "css": ["styles.css"],
        "js": ["angular.js", "angular-pageslide-directive.js", "content.js"]
      }
    ]
}
